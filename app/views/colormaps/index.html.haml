.container
  .row
    .col-md-9.col-md-push-3.center
      %h1 ColorMaps of the Web
      %p Enter a uri to a css file to build a map.

      = form_tag("/colormaps", method: "post") do
        = text_field_tag :url, nil, placeholder: 'URI to css file'
        = submit_tag("Build Map")

  #example{:style => 'margin-top: 30px;'}
    .container
      .row
        .col-md-9.col-md-push-3.center
          %h2 Building Github ColorMap...
          = image_tag('loading.gif')
:plain
  <script>
    $(document).ready(function(){
      $.ajax({
        type: 'post',
        url: '/colormaps',
        data: {url: 'https://github.global.ssl.fastly.net/assets/github-889a72ca42388054915c6d822b2ce3caefa3919f.css'},
        success: function (response) {
          $('#example').html(response);
        }
      });
    });
  </script>
